//recursion 

#include<iostream> //--------------> to check is string palindrome  or not
using namespace std;

bool check(int i, int j, string s){
    if(i >= j) return true;
    if(s[i]!=s[j]) return false;
    return check(i+1,j-1,s);
}
int main() {
    Takeinput();
    string s="MADAM";
    cout<<check(0,s.size()-1,s);
    
}  




///pick and nonpick in recursions

//to print subaarays.

#include <bits/stdc++.h>
using namespace std;
void subset(int i,int n,int arr[],vector<int>&ds){
    if (i==n){
        for(auto it:ds){
            cout<<it<<" ";
        }
        cout<<"\n";
        return;
    }
    //pick call
    ds.push_back(arr[i]);
    subset(i+1,n,arr,ds);
    ds.pop_back();
    //non pick call
    subset(i+1,n,arr,ds);

}
int main() {
    int arr[3]={1,2,3};
    int n=sizeof(arr)/sizeof(int); //arr.size();
    vector<int>ds; 
    subset(0,n,arr,ds);

}  

